div.container(style='max-width:300px;')
	br
	form(role='form', action='/login', method='post', style='max-width:300px;')
		div.panel.panel-default
			div.panel-heading
				h1 Login
			div.panel-body
					.form-group
						input.form-control(type='text', name='username', placeholder='Enter User ID')
					.form-group
						input.form-control(type='password', name='password', placeholder='Password')
			div.panel-footer.text-center
				a(href='/register')
					button.btn.btn-default(type='button') Register
				| &nbsp
				button.btn.btn-default(type='submit') Submit
