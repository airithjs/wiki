extends layout

block content
	div.container
		br
		br
		h1 Register
		form(role='form', action='/register', method='post', style='max-width:300px;')
			.form-group
				input.form-control(type='text', name='username', placeholder='Enter User Name')
			.form-group
				input.form-control(type='text', name='userid', placeholder='User ID')
			.form-group
				input.form-control(type='password', name='password', placeholder='Password')
			.form-group
				input.form-control(type='email', name='email', placeholder='email')
			button.btn.btn-default(type='submit') Submit
			a(href='/')
				button.btn.btn-btn-default(type='button') Cancel